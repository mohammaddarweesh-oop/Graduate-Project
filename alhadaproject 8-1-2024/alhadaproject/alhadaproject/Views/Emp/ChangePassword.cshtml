
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_EmpLayout.cshtml";
}

<div role="main" class="main pgl-bg-grey">
    <!-- Begin page top -->
    <section class="page-top">
        <div class="container ar">
            <div class="page-top-in">
                <h2><span>تعديل الرقم السري </span></h2>
            </div>
        </div>
    </section>
    <!-- End page top -->
    <!-- Begin content with sidebar -->


    <div class="container ">
        <div class="row ar">
            <div class="col-md-6 content textCenter col-center-block">
            </div>
            <hr>
        </div>
        <div class="row ar">

            <form action="http://test.upright-jo.com/Users/edit_password/2" class="col-md-6 input-forms col-center-block pgl-bg-light" id="edit_password" method="post" accept-charset="utf-8">

                <div class="form-group  ">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label> الرقم السري القديم*</label>
                            <input type="password" name="old_password" required="true" class="form-control ">
                        </div>
                    </div>
                </div>
                <div class="form-group  ">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label> الرقم السري الجديد*</label>
                            <div class="password-group">
                                <input type="password" name="new_password" required="true" class="form-control new_password ">
                                <a href="javascript:;" class="show-password-btn" onclick="show_password()"></a>
                            </div>

                        </div>
                    </div>
                </div>


                <input type="hidden" value="2" name="id">
                <div class="form-group">

                    <button name="save_user" type="submit" id="save_user" class="btn btn-default center btn-sm" value="حفظ ">حفظ</button>

                </div>
            </form>
        </div>
    </div>
    <!-- End content with sidebar -->
</div>

