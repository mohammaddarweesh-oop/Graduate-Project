@model IEnumerable<alhadaproject.Models.ClientViewModel>
@{
    ViewData["Title"] = "MyClient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div role="main" class="main pgl-bg-grey pgl-bg-light">
    <!-- Begin content with sidebar -->
    <div class="container "> 
        <section class="pgl-advanced-search  search-box">
            <div class="container small">
                <form  method="post" id="clients_search" accept-charset="utf-8">
                <div class="row ar">
                    <div class="col-md-2 col-sm-6">
                        <div class="form-group">
                            <label>رقم المعرف </label>
                            <input type="text" name="refs" value="" class="form-control">
 
                        </div>
                    </div> 
                    <div class="col-md-2 col-sm-6">
                        <div class="form-group">
                            <label> اسم الزبون</label>
                                <input type="text" name="cname" value="" class="form-control">
 
                        </div>
                    </div> 
                    <div class="col-md-2 col-sm-6">
                        <div class="form-group">
                            <label>رقم الزبون </label>
                            <input type="text" name="mobile" value="" class="form-control">
 
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-6">
                        <div class="form-group">
                            <label> الأهمية </label>
                            <select name="interested" class="chosen-select" style="display: none;">
<option value="0">-</option>
<option value="1">مهتم جدا</option>
