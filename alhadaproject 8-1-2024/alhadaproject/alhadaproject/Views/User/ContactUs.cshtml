

@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_UsarLayout.cshtml";
}

<div role="main" class="main pgl-bg-grey">
    <!-- Begin page top -->
    <section class="page-top">
        <div class="container">
            <div class="page-top-in">
                <h2><span>تواصل معنا</span></h2>
            </div>
        </div>
    </section>
    <!-- End page top -->
    <!-- Begin content with sidebar -->
    <div class="container">
        <div class="row ar">
            <div class="col-md-12 content">
                <div class="form-group">

                    <p>
                        يمكنك التواصل معنا من خلا ارسال رسالة بشكل مباشر.
                    </p>
                    <p>
                        كل ما عليك هو ملئ الحقول بالمعلومات و ارسال رقم الهاتف لتواصل معك
                    </p>
                    <hr>
                </div>
                <div class="contact">
                    <form  class="col-md-12 input-forms" id="newAssetsForm" method="post" accept-charset="utf-8">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="name">الاسم*</label>
                                    <input type="text" name="FullName" required="true" class="form-control" data-msg-required="Please enter your name." required>
                                </div>
                                <div class="col-sm-6">
                                    <label for="customer_mail">الايميل الالكتروني*</label>
                                    <input type="email" name="Email" required="true" class="form-control" data-msg-required="Please enter your email address." data-msg-email="Please enter a valid email address." required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label for="subject">عنوان الرسالة*</label>
                                    <input type="text" name="Title" class="form-control" data-msg-required="Please enter the subject.">
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label>نص الرسالة*</label>
                            <textarea name="Message" rows="9" name="comments"></textarea>
                        </div>
                        <div class="form-group">

                            <input type="submit" class="btn btn-default center btn-sm" value="حفظ البيانات" />

                            
                        </div>
                    </form>                    <br>
                    <br><br>
                    <br>



                    <div class="row" style="clear: both;float: none;left:auto;position: relative;padding-top:100px ">
                        <div class="col-sm-10">
                            <strong>العنوان</strong>
                            <address>
                                خـلدا - اشـارة البنك العربي .
                                مقابل البنك الاسلامي الاردني - عماره 114
                            </address>
                        </div>
                        <div class="col-sm-10">
                            <address>
                                <strong>المكتب.</strong> <a href='tel:+962795886301'>00962795886301</a><br>
                                <strong>الموبايل.</strong><a href='tel:+962780585580'>00962780585580 </a><br>
                            </address>
                        </div>
                        <div class='col-sm-12'>
                            <div id="contact-map" class="pgl-bg-light">
                                <div id="map" class=""></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End content with sidebar -->

</div>
