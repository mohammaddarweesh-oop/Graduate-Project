<script src="~/assets/js/mapapi.js"></script>
<script>

    (function () {
        initMap();
    })();
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
    function openSerchAdvance() {
        if (!jQuery('.search-show-more').hasClass('active')) {
            jQuery(".other_serch_items").fadeIn("slow", function () {
                jQuery('.search-show-more').addClass('active');
            });
            return;
        }

        jQuery(".other_serch_items").fadeOut("slow", function () {
            jQuery('.search-show-more').removeClass('active');
            jQuery("html, body").animate({ scrollTop: 0 }, "slow");
        });

    }
</script>
